
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CommentAdd</title>
</head>
<body>
<form method="post">
    <input type="text" name="name"/>
    <br/>
    <textarea name="comment"></textarea>
    <br/>
    <input type="submit" value="yorum gönder"/>
</form>
<h1>
    Yorumlar
</h1>

@if (ViewBag.comment != null)
{
    foreach (var VARIABLE in ViewBag.comment as string[])
    {
        <span>@VARIABLE</span>
        <hr/>
        
    }
}

</body>
</html>
